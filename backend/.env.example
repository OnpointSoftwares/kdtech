# KDTech Solutions - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=kdtech_solutions
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# Application Settings
APP_NAME="KDTech Solutions"
APP_URL=http://localhost/kdtech/networking-website
APP_ENV=development
APP_DEBUG=true

# Admin Settings
ADMIN_EMAIL=admin@kdtechsolutions.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=kdtech2024

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@kdtechsolutions.com
MAIL_FROM_NAME="KDTech Solutions"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=../uploads/

# Security Settings
SESSION_LIFETIME=7200
CSRF_TOKEN_EXPIRY=3600
PASSWORD_MIN_LENGTH=8

# API Settings
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Payment Settings (if implementing payments)
PAYMENT_CURRENCY=KES
TAX_RATE=16.00
SHIPPING_RATE=1500
FREE_SHIPPING_THRESHOLD=50000

# Social Media Links
FACEBOOK_URL=https://facebook.com/kdtechsolutions
TWITTER_URL=https://twitter.com/kdtechsolutions
LINKEDIN_URL=https://linkedin.com/company/kdtechsolutions
INSTAGRAM_URL=https://instagram.com/kdtechsolutions

# Contact Information
COMPANY_PHONE=+254-700-123-456
COMPANY_EMAIL=info@kdtechsolutions.com
COMPANY_ADDRESS="Nairobi, Kenya"

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=

# reCAPTCHA (optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
